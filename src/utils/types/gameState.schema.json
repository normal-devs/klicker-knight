{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "DecisionRoom": {
      "type": "object",
      "properties": {
        "type": {
          "const": "decisionRoom"
        }
      },
      "required": ["type"],
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "decisionRoom"
            },
            "playerState": {
              "enum": [
                "AtEntrance"
              ]
            },
            "isSheeple": {
              "type": "boolean"
            }
          },
          "required": ["type", "playerState", "isSheeple"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "const": "decisionRoom"
            },
            "playerState": {
              "enum": [
                "AttemptingToLeave"
              ]
            },
            "isSheeple": {
              "const": false
            }
          },
          "required": ["type", "playerState", "isSheeple"],
          "additionalProperties": false
        }
      ]
    },
    "ExampleRoom1": {
      "type": "object",
      "properties": {
        "type": {
          "const": "exampleRoom1"
        },
        "playerState": {
          "enum": [
            "AtEntrance"
          ]
        }
      },
      "required": ["type", "playerState"],
      "additionalProperties": false
    },
    "ExampleRoom2": {
      "type": "object",
      "properties": {
        "type": {
          "const": "exampleRoom2"
        },
        "playerState": {
          "enum": [
            "AtEntrance",
            "State2A",
            "State2B"
          ]
        }
      },
      "required": ["type", "playerState"],
      "additionalProperties": false
    },
    "ExampleRoom3": {
      "type": "object",
      "properties": {
        "type": {
          "const": "exampleRoom3"
        },
        "playerState": {
          "enum": [
            "AtEntrance",
            "State3A",
            "State3B"
          ]
        },
        "laps": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["type", "playerState", "laps"],
      "additionalProperties": false
    },
    "RoomceptionRoom": {
      "type": "object",
      "properties": {
        "type": {
          "const": "roomceptionRoom"
        },
        "playerState": {
          "enum": [
            "AtEntrance"
          ]
        }
      },
      "required": ["type", "playerState"],
      "additionalProperties": false
    },
    "RoomState": {
      "type": "object",
      "oneOf": [
        { "$ref": "#/definitions/DecisionRoom" },
        { "$ref": "#/definitions/ExampleRoom1" },
        { "$ref": "#/definitions/ExampleRoom2" },
        { "$ref": "#/definitions/ExampleRoom3" },
        { "$ref": "#/definitions/RoomceptionRoom" }
      ]
    }
  },
  "title": "GameState",
  "type": "object",
  "properties": {
    "roomState": { "$ref": "#/definitions/RoomState" }
  },
  "required": ["roomState"],
  "additionalProperties": false
}
