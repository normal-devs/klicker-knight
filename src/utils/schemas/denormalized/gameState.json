{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GameState",
  "type": "object",
  "properties": {
    "roomState": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "RoomState",
      "type": "object",
      "oneOf": [
        {
          "$schema": "http://json-schema.org/draft-07/schema#",
          "title": "ExampleRoom1",
          "type": "object",
          "properties": {
            "type": {
              "const": "exampleRoom1"
            },
            "playerState": {
              "enum": [
                "AtEntrance"
              ]
            }
          },
          "required": [
            "type",
            "playerState"
          ],
          "additionalProperties": false
        },
        {
          "$schema": "http://json-schema.org/draft-07/schema#",
          "title": "ExampleRoom2",
          "type": "object",
          "properties": {
            "type": {
              "const": "exampleRoom2"
            },
            "playerState": {
              "enum": [
                "AtEntrance",
                "State2A",
                "State2B"
              ]
            }
          },
          "required": [
            "type",
            "playerState"
          ],
          "additionalProperties": false
        },
        {
          "$schema": "http://json-schema.org/draft-07/schema#",
          "title": "ExampleRoom3",
          "type": "object",
          "properties": {
            "type": {
              "const": "exampleRoom3"
            },
            "playerState": {
              "enum": [
                "AtEntrance",
                "State3A",
                "State3B"
              ]
            },
            "laps": {
              "type": "integer",
              "minimum": 0
            }
          },
          "required": [
            "type",
            "playerState",
            "laps"
          ],
          "additionalProperties": false
        }
      ]
    }
  },
  "required": [
    "roomState"
  ],
  "additionalProperties": false
}