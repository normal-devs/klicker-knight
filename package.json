{
  "name": "klicker-knight",
  "version": "0.0.0",
  "scripts": {
    "clean": "rimraf lib",
    "clean:game": "rm -r saves/*.json",
    "compile:gameStateSchema": "json2ts src/utils/types/gameState.schema.json > src/utils/types/gameState.d.ts",
    "dev": "node bin/run",
    "lint:md": "markdownlint **/*.md --ignore node_modules",
    "lint:ts": "eslint --ext .ts,.js .",
    "lint:yaml": "yamllint --ignore=node_modules/**/*.yaml **/*.yaml",
    "prepack": "npm run clean && tsc -b",
    "test": "nyc --extension .ts mocha \"tests/**/*.test.ts\"",
    "test:semantic-mocha": "nyc --extension .ts mocha --config semantic-mocha/tests/.mocharc.js \"semantic-mocha/tests/**/*.test.ts\"",
    "typecheck": "tsc --noEmit -P tests/tsconfig.json ",
    "update-readme": "oclif-dev readme"
  },
  "bin": {
    "klicker-knight": "./bin/run"
  },
  "dependencies": {
    "@oclif/command": "^1.8.6",
    "@oclif/config": "^1.18.1",
    "@oclif/plugin-help": "^3.2.9",
    "ajv": "^8.9.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.5",
    "@oclif/test": "^1.2.8",
    "@randograms/schema-to-generator": "^0.5.0",
    "@tsconfig/node16": "^1.0.2",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "chai": "^4.3.4",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "json-schema-to-typescript": "^10.1.5",
    "markdownlint-cli": "^0.30.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "yaml-lint": "^1.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "/bin",
    "/lib"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "bin": "klicker-knight"
  },
  "types": "lib/index.d.ts"
}
