{
  "name": "klicker-knight",
  "version": "0.0.0",
  "scripts": {
    "clean:game": "rm -r saves/*.json",
    "dev:analyze": "npm run schemas:update && npm run lint:ts && npm run typecheck",
    "dev:ci": "ts-node ./scripts/devCi.ts",
    "dev:test": "npm run schemas:update && npm run test:src && npm run test:e2e",
    "klicker-knight": "ts-node src/klickerKnight",
    "lint:md": "markdownlint **/*.md --ignore node_modules/ custom-markdownlint-rules/tests/test-input/ --rules ./custom-markdownlint-rules/index.js",
    "lint:ts": "eslint --color --ext .ts,.js",
    "lint:ts:all": "npm run lint:ts .",
    "lint:ts:compile-custom-types": "npm run lint:ts ./scripts/compileCustomTypes.ts",
    "lint:ts:denormalize-schemas": "npm run lint:ts ./scripts/denormalizeSchemas.ts",
    "lint:ts:dev-ci": "npm run lint:ts ./scripts/devCi.ts",
    "lint:yaml": "yamllint --ignore=node_modules/**/*.yaml **/*.yaml",
    "schemas:compile-base-types": "json2ts --cwd=src/utils/schemas/normalized/ src/utils/schemas/normalized/gameState.json > src/utils/types/gameState.d.ts",
    "schemas:compile-custom-types": "ts-node scripts/compileCustomTypes.ts",
    "schemas:denormalize": "ts-node scripts/denormalizeSchemas.ts",
    "schemas:prettierify": "prettier --loglevel silent --write src/utils/types/gameState.d.ts src/utils/types/customTypes.ts",
    "schemas:update": "npm run schemas:denormalize && npm run schemas:compile-base-types && npm run schemas:compile-custom-types && npm run schemas:prettierify",
    "test:custom-eslint-rules": "mocha -c --config eslint-local-rules/tests/.mocharc.js \"eslint-local-rules/tests/rules/**/*.test.ts\"",
    "test:custom-markdownlint-rules": "mocha -c --config custom-markdownlint-rules/tests/.mocharc.js \"custom-markdownlint-rules/tests/rules/**/*.test.ts\"",
    "test:e2e": "mocha -c \"tests/e2e/**/*.test.ts\"",
    "test:semantic-mocha": "nyc --extension .ts mocha -c --config semantic-mocha/tests/.mocharc.js \"semantic-mocha/tests/**/*.test.ts\"",
    "test:src": "nyc --extension .ts mocha -c \"tests/src/**/*.test.ts\"",
    "typecheck": "tsc --noEmit -P tests/tsconfig.json "
  },
  "dependencies": {
    "ajv": "^8.9.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.9",
    "@randograms/schema-to-generator": "^0.5.1",
    "@tsconfig/node16": "^1.0.2",
    "@types/chai": "^4.2.22",
    "@types/eslint": "^8.4.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.11",
    "@types/sinon": "^10.0.9",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "chai": "^4.3.4",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-local-rules": "^1.1.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "json-schema-to-typescript": "^10.1.5",
    "markdownlint": "^0.25.1",
    "markdownlint-cli": "^0.30.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "yaml": "^1.10.2",
    "yaml-lint": "^1.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT"
}
