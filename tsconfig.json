{
  "ts-node": {
    "transpileOnly": true
  },
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2021",
  },
  "include": [
    "src/**/*"
  ]
}
